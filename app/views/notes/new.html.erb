<%= form_for([@project, @project.notes.new]) do |f| %>
  <div class="field">
  	<%= f.label :subject %><br />
  	<%= f.text_field :subject %>
  </div>
  <div class="field">
  	<%= f.label :body %><br />
  	<%= f.text_area :body %>
  </div>
  <div class="actions">
  	<%= f.submit 'Add' %>
  </div>
  <% end %>

